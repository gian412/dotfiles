general {
  output_format = "i3bar"
  colors = true
  interval = 10
}

order += "wireless wlp0s20f3"
order += "volume master"
order += "memory"
order += "disk /"
order += "cpu_temperature 5"
order += "cpu_usage"
order += "battery 0"
order += "time"

wireless wlp0s20f3 {
  format_up = "(%quality ) %ip"
  format_down = "W: down"
}

